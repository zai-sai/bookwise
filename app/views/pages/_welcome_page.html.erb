<div class="login-page">

  <!-- Background video -->
  <div class="video-bg">
    <video autoplay muted loop playsinline>
      <source src="<%= asset_path("books_animation.mp4") %>" type="video/mp4">
    </video>
  </div>

  <!-- login content -->
  <div class="login-wrapper">
    <div class="login-container">

      <!-- Left side-->
      <div class="login-left">
        <%= image_tag "dewey_bg-transparent.png", class: "login-owl" %>
      </div>

      <!-- Right side-->
      <div class="login-right">
        <h2 class="mb-4">Welcome to Bookwise</h2>

        <div class="d-flex flex-column gap-3">
          <%= link_to "Log in", new_user_session_path, class: "btn btn-primary rounded-pill btn-md" %>
          <%= link_to "Sign up", new_user_registration_path, class: "btn btn-outline-dark rounded-pill btn-md" %>
        </div>
      </div>

    </div>
  </div>
</div>


