<%= form_with url: user_books_path, method: :get do %>
  <div class="mb-2">
    <div class="shadow rounded-pill p-3">
      <div class="m-0 text-center text-dark-emphasis d-flex">
        <%= text_field_tag :query,
            params[:query],
            class: "form-control rounded-pill text-center",
            placeholder: "Find a book in your library"
        %>
        <button type="submit" class="btn btn-primary rounded-pill">
          <i class="fa-solid fa-magnifying-glass  text-white"></i>
        </button>
      </div>
    </div>
  </div>
<% end %>
