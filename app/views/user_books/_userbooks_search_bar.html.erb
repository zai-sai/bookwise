<%= form_with url: user_books_path, method: :get, class: "mb-2" do %>
  <div class="container">
    <div class="d-flex justify-content-between align-items-center">
      <%= text_field_tag :query,
          params[:query],
          class: "form-control text-center text-dark-emphasis bg-white shadow rounded-pill p-3 me-2",
          placeholder: "Find a book in your library"
      %>
      <button type="submit" class="btn btn-primary btn-lg rounded-pill px-3 me-2">
        <i class="fa-solid fa-magnifying-glass  text-white"></i>
      </button>
    </div>
  </div>
<% end %>
