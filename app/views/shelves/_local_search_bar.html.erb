<%= form_with url: shelf_path, method: :get, class: "mt-3 mb-5" do %>
  <div class="container">
    <div class="d-flex justify-content-between align-items-center">
      <%= text_field_tag :query,
          params[:query],
          class: "form-control text-center text-dark-emphasis bg-white shadow rounded-pill p-3 me-2",
          placeholder: "Find a book on your shelf"
      %>
      <button type="submit" class="btn btn-primary btn-lg rounded-pill px-3 me-2 shadow">
        <i class="fa-solid fa-magnifying-glass  text-white"></i>
      </button>
    </div>
  </div>
<% end %>
